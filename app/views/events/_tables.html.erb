<div class="rows">
  <% event.tables.each_with_index{|table, i| %>
    <div class="col-lg-3 col-sm-4 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= i + 1 %>番テーブル<br>
          <small>
            <% table.popular_topics.each{|t| %>
              <%= content_tag "span", t.description, class: "label label-default" %>
              <% } %>
            </small>
          </div>
          <div class="panel-body">
            <ol>
              <% table.users.each_with_index{|u, i| -%>
                <li><%= u.name %></li>
              <% } -%>
            </ol>
          </div>
        </div>
      </div>
    <% } %>
